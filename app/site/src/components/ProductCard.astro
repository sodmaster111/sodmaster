---
const { product } = Astro.props;
---
<article class="product-card">
  <img src={product.heroImage} alt={`${product.title} hero image`} loading="lazy" />
  <div class="content">
    <h3>
      <a href={`/catalog/${product.slug}/`}>{product.title}</a>
    </h3>
    <p>{product.summary}</p>
    <p class="price">{product.price}</p>
    <ul class="tags" aria-label="tags">
      {product.tags.map((tag) => <li>{tag}</li>)}
    </ul>
  </div>
</article>
<style>
  .product-card {
    display: grid;
    gap: 1rem;
    grid-template-columns: minmax(0, 1fr);
    background: var(--surface, #fff);
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.08);
  }

  img {
    width: 100%;
    border-radius: 0.75rem;
    object-fit: cover;
    aspect-ratio: 3 / 2;
  }

  .content {
    display: grid;
    gap: 0.5rem;
  }

  .price {
    font-weight: 600;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tags li {
    background: rgba(19, 84, 122, 0.1);
    color: #13547a;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.875rem;
  }

  @media (min-width: 48rem) {
    .product-card {
      grid-template-columns: minmax(0, 2fr) minmax(0, 3fr);
      align-items: center;
    }
  }
</style>
