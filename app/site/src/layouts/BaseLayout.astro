---
const {
  title = 'Sodmaster',
  description = 'AI-assisted sod logistics and care',
  keywords = [],
} = Astro.props;
const keywordList = Array.isArray(keywords) ? keywords.join(', ') : keywords;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {keywordList && <meta name="keywords" content={keywordList} />}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header>
      <nav class="shell">
        <a class="brand" href="/">Sodmaster</a>
        <div class="nav-links">
          <a href="/catalog/">Catalog</a>
          <a href="/subscribe/">Subscribe</a>
          <a href="/blog/">Blog</a>
          <a href="/#contact">Contact</a>
        </div>
      </nav>
    </header>
    <main class="shell">
      <slot />
    </main>
    <footer>
      <div class="shell">
        <p>Â© {new Date().getFullYear()} Sodmaster Corporation. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
<style>
  :global(body) {
    margin: 0;
    font-family: 'Space Grotesk', system-ui, sans-serif;
    background: #f6f9fc;
    color: #0d1b2a;
  }

  header {
    position: sticky;
    top: 0;
    backdrop-filter: blur(12px);
    background: rgba(246, 249, 252, 0.92);
    border-bottom: 1px solid rgba(13, 27, 42, 0.05);
    z-index: 10;
  }

  .shell {
    width: min(70rem, 92vw);
    margin: 0 auto;
    padding: 1.5rem 0;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .brand {
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: inherit;
  }

  .nav-links {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  a:hover,
  a:focus {
    text-decoration: underline;
  }

  main {
    padding: 4rem 0 6rem;
  }

  footer {
    padding: 2rem 0;
    background: #0d1b2a;
    color: #f6f9fc;
  }

  footer p {
    margin: 0;
  }
</style>
