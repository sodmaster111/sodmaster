---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProductCard from '../../components/ProductCard.astro';
import products from '../../data/products.json';
---
<BaseLayout title="Sodmaster Catalog" description="Explore Sodmaster's AI-driven turf services">
  <header class="catalog-hero">
    <h1>Catalog</h1>
    <p>
      Choose from modular services that layer AI, agronomy experts, and concierge support to unlock scalable turf operations.
    </p>
  </header>
  <section class="product-grid" aria-label="Product catalog">
    {products.map((product) => (
      <ProductCard product={product} />
    ))}
  </section>
</BaseLayout>
<style>
  .catalog-hero {
    display: grid;
    gap: 1rem;
    margin-bottom: 3rem;
    max-width: 46rem;
  }

  .product-grid {
    display: grid;
    gap: 2rem;
  }

  @media (min-width: 52rem) {
    .product-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
</style>
