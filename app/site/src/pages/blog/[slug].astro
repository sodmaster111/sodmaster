---
import BaseLayout from '../../layouts/BaseLayout.astro';
import posts from '../../data/posts';
import keywords from '../../seo/keywords.json';

export async function getStaticPaths() {
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
---
<BaseLayout title={`${post.title} | Sodmaster Blog`} description={post.summary} keywords={keywords}>
  <article class="post">
    <header>
      <p class="meta">{post.date} · {post.author} · {post.readingTime}</p>
      <h1>{post.title}</h1>
      <p class="summary">{post.summary}</p>
    </header>
    <div class="body">
      {post.body.map((block) => (
        block.type === 'heading' ? (
          <h2>{block.text}</h2>
        ) : block.type === 'list' ? (
          <ul>
            {block.items?.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        ) : (
          <p>{block.text}</p>
        )
      ))}
    </div>
  </article>
</BaseLayout>

<style>
  .post {
    background: #fff;
    border-radius: 1.5rem;
    padding: 3rem;
    box-shadow: 0 1.5rem 3rem rgba(13, 27, 42, 0.12);
    display: grid;
    gap: 2rem;
  }

  header {
    display: grid;
    gap: 0.75rem;
  }

  .meta {
    margin: 0;
    color: #627b94;
    font-size: 0.95rem;
  }

  h1 {
    margin: 0;
    font-size: clamp(2.25rem, 4vw, 3rem);
  }

  .summary {
    margin: 0;
    color: #33415c;
    line-height: 1.6;
    font-size: 1.1rem;
  }

  .body {
    display: grid;
    gap: 1.5rem;
    color: #102a43;
    line-height: 1.75;
  }

  h2 {
    margin: 2rem 0 0.5rem;
    font-size: 1.75rem;
  }

  ul {
    margin: 0;
    padding-left: 1.25rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  @media (max-width: 48rem) {
    .post {
      padding: 2rem;
    }
  }
</style>
