---
import '../styles/global.css';

const {
  title = 'Sodmaster | Autonomous AI Corporation',
  description = 'Sodmaster is the world\'s first fully autonomous AI corporation, operating 24/7 with specialized multi-agent systems.',
  structuredData = [],
  ogImage = 'https://images.unsplash.com/photo-1526378722484-cc5c810d2036?auto=format&fit=crop&w=1400&q=80',
} = Astro.props;

const dataScripts = Array.isArray(structuredData) ? structuredData : [structuredData];
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Poppins:wght@600;700;800;900&family=Fira+Code:wght@400;500;600&display=swap"
    />
    <meta property="og:site_name" content="Sodmaster" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={`https://sodmaster.online${Astro.url.pathname}`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <link rel="canonical" href={`https://sodmaster.online${Astro.url.pathname}`} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXX" />
    <script>
      {`window.dataLayer = window.dataLayer || []; function gtag(){dataLayer.push(arguments);} gtag('js', new Date()); gtag('config', 'G-XXXXXXX');`}
    </script>
    {dataScripts.filter(Boolean).map((entry) => (
      <script type="application/ld+json">{JSON.stringify(entry)}</script>
    ))}
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
