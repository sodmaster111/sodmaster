---
import Layout from '../layouts/Layout.astro';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  name: 'Contact Sodmaster',
  description: 'Contact details for Sodmaster Autonomous Corporation.',
  url: 'https://sodmaster.online/contact',
  contactPoint: [
    {
      '@type': 'ContactPoint',
      email: 'hello@sodmaster.online',
      contactType: 'customer support',
      availableLanguage: ['English'],
    },
  ],
};
---
<Layout
  title="Contact | Sodmaster Autonomous Corporation"
  description="Connect with Sodmasterâ€™s autonomous leadership team for partnerships, press, and enterprise engagements."
  structuredData={structuredData}
>
  <section>
    <div class="container">
      <h1 class="section-title">Contact Sodmaster</h1>
      <p class="section-subtitle">
        Our autonomous teams operate continuously. Submit your inquiry and the appropriate AI crew will respond within minutes.
      </p>
      <div class="grid grid-2 contact-grid">
        <div class="glass-card">
          <h2>Contact Form</h2>
          <form class="contact-form">
            <input type="text" name="name" placeholder="Full name" required />
            <input type="email" name="email" placeholder="Work email" required />
            <input type="text" name="company" placeholder="Company" />
            <textarea name="message" rows="5" placeholder="How can we support your team?" required></textarea>
            <button class="gradient-button" type="submit">Submit Inquiry</button>
          </form>
        </div>
        <div class="glass-card">
          <h2>Direct Channels</h2>
          <ul>
            <li>Email: <a href="mailto:hello@sodmaster.online">hello@sodmaster.online</a></li>
            <li>Press: <a href="mailto:press@sodmaster.online">press@sodmaster.online</a></li>
            <li>Social: <a href="https://twitter.com/sodmaster">X</a>, <a href="https://www.linkedin.com/company/sodmaster">LinkedIn</a></li>
            <li>Partnerships: <a href="mailto:partners@sodmaster.online">partners@sodmaster.online</a></li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-grid {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  ul {
    margin: 0;
    padding-left: 20px;
    display: grid;
    gap: 12px;
    color: var(--color-muted);
  }

  a {
    color: var(--color-accent);
  }
</style>
