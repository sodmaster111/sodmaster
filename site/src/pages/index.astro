---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Icon } from 'astro-icon/components';
---

<Layout 
  title="Sodmaster - World's First Autonomous AI Corporation"
  description="50+ specialized AI agents working 24/7 to build, operate, and scale a fully autonomous business"
>
  <Header />
  
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-brand-purple/20 via-transparent to-brand-blue/20"></div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center max-w-4xl mx-auto">
        <div class="inline-flex items-center gap-2 bg-white/5 backdrop-blur px-4 py-2 rounded-full text-sm mb-8 border border-white/10">
          <Icon name="heroicons:sparkles-solid" class="w-4 h-4 text-brand-blue" />
          <span>World's First Autonomous AI Corporation</span>
        </div>
        
        <h1 class="text-6xl md:text-7xl font-display font-black mb-6 leading-tight">
          Building the Future of
          <span class="bg-gradient-to-r from-brand-purple to-brand-blue bg-clip-text text-transparent"> Autonomous Business</span>
        </h1>
        
        <p class="text-xl text-gray-300 mb-12 max-w-2xl mx-auto">
          50+ specialized AI agents working 24/7 across all departments - from engineering to finance to marketing. Zero human intervention required.
        </p>
        
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href="/technology" class="px-8 py-4 bg-gradient-to-r from-brand-purple to-brand-blue rounded-full font-semibold text-lg hover:scale-105 transition shadow-xl shadow-brand-purple/50">
            Explore Technology
          </a>
          <a href="/pricing" class="px-8 py-4 bg-white/5 backdrop-blur rounded-full font-semibold text-lg hover:bg-white/10 transition border border-white/10">
            View Pricing
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Bar -->
  <section class="py-16 border-y border-white/5">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold text-brand-purple mb-2">50+</div>
          <div class="text-gray-400">AI Agents Active</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-brand-blue mb-2">99.9%</div>
          <div class="text-gray-400">System Uptime</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-brand-purple mb-2">24/7</div>
          <div class="text-gray-400">Autonomous Ops</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-brand-blue mb-2">3</div>
          <div class="text-gray-400">Blockchains</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-32">
    <div class="container mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-20">
        <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
          Autonomous Intelligence at Scale
        </h2>
        <p class="text-xl text-gray-400">
          Every department powered by specialized AI agents with deep expertise
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white/5 backdrop-blur p-8 rounded-2xl border border-white/10 hover:border-brand-purple/50 transition group">
          <Icon name="heroicons:cpu-chip" class="w-12 h-12 text-brand-purple mb-6 group-hover:scale-110 transition" />
          <h3 class="text-2xl font-bold mb-4">Multi-Agent Architecture</h3>
          <p class="text-gray-400">CrewAI-powered coordination between specialized agents with hierarchical task delegation</p>
        </div>

        <div class="bg-white/5 backdrop-blur p-8 rounded-2xl border border-white/10 hover:border-brand-blue/50 transition group">
          <Icon name="heroicons:shield-check" class="w-12 h-12 text-brand-blue mb-6 group-hover:scale-110 transition" />
          <h3 class="text-2xl font-bold mb-4">Enterprise Security</h3>
          <p class="text-gray-400">CISO-AI manages threat detection, compliance, and data protection 24/7</p>
        </div>

        <div class="bg-white/5 backdrop-blur p-8 rounded-2xl border border-white/10 hover:border-brand-purple/50 transition group">
          <Icon name="heroicons:currency-dollar" class="w-12 h-12 text-brand-purple mb-6 group-hover:scale-110 transition" />
          <h3 class="text-2xl font-bold mb-4">Multi-Chain Treasury</h3>
          <p class="text-gray-400">CFO-AI manages BTC, ETH, and TON wallets with automated risk management</p>
        </div>

        <div class="bg-white/5 backdrop-blur p-8 rounded-2xl border border-white/10 hover:border-brand-blue/50 transition group">
          <Icon name="heroicons:code-bracket" class="w-12 h-12 text-brand-blue mb-6 group-hover:scale-110 transition" />
          <h3 class="text-2xl font-bold mb-4">Continuous Development</h3>
          <p class="text-gray-400">CTO-AI orchestrates DevOps, Backend, and Frontend units for rapid iteration</p>
        </div>

        <div class="bg-white/5 backdrop-blur p-8 rounded-2xl border border-white/10 hover:border-brand-purple/50 transition group">
          <Icon name="heroicons:chart-bar" class="w-12 h-12 text-brand-purple mb-6 group-hover:scale-110 transition" />
          <h3 class="text-2xl font-bold mb-4">Growth Automation</h3>
          <p class="text-gray-400">CMO-AI drives SEO, content creation, and social media engagement autonomously</p>
        </div>

        <div class="bg-white/5 backdrop-blur p-8 rounded-2xl border border-white/10 hover:border-brand-blue/50 transition group">
          <Icon name="heroicons:cog" class="w-12 h-12 text-brand-blue mb-6 group-hover:scale-110 transition" />
          <h3 class="text-2xl font-bold mb-4">Operational Excellence</h3>
          <p class="text-gray-400">COO-AI optimizes workflows, manages customer success, and ensures quality</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-brand-purple/20 to-brand-blue/20"></div>
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
          Join the AI Revolution
        </h2>
        <p class="text-xl text-gray-300 mb-12">
          Be part of the first fully autonomous AI corporation
        </p>
        <a href="/pricing" class="inline-block px-8 py-4 bg-white text-brand-dark rounded-full font-semibold text-lg hover:scale-105 transition shadow-2xl">
          Start Your Subscription
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
