---
import Layout from '../layouts/Layout.astro';

const plans = [
  {
    name: 'Starter',
    price: '$2,500/mo',
    features: ['Core API access', 'Up to 5 AI agents', 'Email support', 'Shared telemetry dashboard'],
  },
  {
    name: 'Pro',
    price: '$6,500/mo',
    features: ['20 AI agents', 'Dedicated success crew', 'Custom workflows', '24/7 incident response'],
  },
  {
    name: 'Alpha',
    price: '$18,000/mo',
    features: ['50 AI agents', 'On-premise connectors', 'Real-time revenue analytics', 'Security posture reviews'],
  },
  {
    name: 'Enterprise',
    price: 'Custom',
    features: ['Unlimited AI agents', 'Private CrewAI clusters', 'Compliance automation', 'Dedicated C-level council'],
  },
];

const faq = [
  {
    question: 'How quickly can we onboard?',
    answer: 'Enterprise deployments typically go live within 10 business days with automated environment provisioning and integration playbooks.',
  },
  {
    question: 'What security certifications do you maintain?',
    answer: 'Sodmaster operates under SOC 2 Type II controls with continuous monitoring, zero-trust enforcement, and blockchain audit trails.',
  },
  {
    question: 'How are AI agents customized?',
    answer: 'Each crew configures prompt frameworks, knowledge graphs, and integration adapters tailored to your workflows and KPIs.',
  },
  {
    question: 'Do you support hybrid infrastructures?',
    answer: 'Yes. Our agents connect to public cloud, on-premise, and multi-chain services with secure tunneling and compliance guardrails.',
  },
];

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'OfferCatalog',
  name: 'Sodmaster Pricing Plans',
  description: 'Pricing tiers for Sodmaster autonomous AI services.',
  url: 'https://sodmaster.online/pricing',
  itemListElement: plans.map((plan, index) => ({
    '@type': 'Offer',
    name: plan.name,
    price: plan.price,
    position: index + 1,
    availability: 'https://schema.org/InStock',
  })),
};
---
<Layout
  title="Pricing | Sodmaster Autonomous Plans"
  description="Compare Sodmasterâ€™s Starter, Pro, Alpha, and Enterprise plans to activate autonomous AI agents across your business."
  structuredData={structuredData}
>
  <section>
    <div class="container">
      <h1 class="section-title">Plan Comparison</h1>
      <p class="section-subtitle">
        Select a plan aligned to your scale and regulatory posture. Each engagement includes autonomous onboarding and dedicated telemetry.
      </p>
      <div class="plans">
        {plans.map((plan) => (
          <div class="glass-card plan" id={plan.name.toLowerCase()}>
            <span class="table-plan-name">{plan.name}</span>
            <span class="table-plan-price">{plan.price}</span>
            <ul>
              {plan.features.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
            <a class="gradient-button" href={`/contact?plan=${plan.name}`}>Talk to Sales</a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section id="enterprise">
    <div class="container">
      <h2 class="section-title">Enterprise Program</h2>
      <div class="glass-card enterprise-card">
        <p>
          Unlock a private CrewAI cluster, bespoke compliance automations, and a dedicated council of C-level AI agents steering your
          roadmap.
        </p>
        <div class="button-row">
          <a class="gradient-button" href="/contact?plan=Enterprise">Schedule Alignment Call</a>
          <a class="ghost-button" href="mailto:enterprise@sodmaster.online">Email Enterprise Team</a>
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="container">
      <h2 class="section-title">Frequently Asked Questions</h2>
      <div class="faq">
        {faq.map((item) => (
          <div class="faq-item">
            <h3>{item.question}</h3>
            <p>{item.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .plans {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 24px;
  }

  .plan {
    display: grid;
    gap: 16px;
    padding: 36px;
  }

  .plan ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 10px;
    color: var(--color-muted);
  }

  .enterprise-card {
    display: grid;
    gap: 18px;
  }

  .faq {
    display: grid;
    gap: 16px;
  }
</style>
