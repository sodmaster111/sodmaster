---
import Layout from '../layouts/Layout.astro';

const metrics = [
  { label: 'API Calls Processed (24h)', value: '1,024,886', trend: '+12.4%', detail: 'Across inference, automation, and partner integrations.' },
  { label: 'Active Subscriptions', value: '1,482', trend: '+8.1%', detail: 'Enterprise, Alpha, and Pro tiers under annual contracts.' },
  { label: 'Uptime (Trailing 90d)', value: '99.92%', trend: '+0.02%', detail: 'Across production workloads and support services.' },
  { label: 'Monthly Recurring Revenue', value: '$2.8M', trend: '+15.7%', detail: 'Blockchain settlements reconciled hourly.' },
];

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Dataset',
  name: 'Sodmaster Operational Metrics',
  description: 'Real-time operational metrics for the Sodmaster autonomous corporation.',
  url: 'https://sodmaster.online/metrics',
};
---
<Layout
  title="Metrics | Sodmaster Real-Time Dashboard"
  description="Track Sodmasterâ€™s real-time API throughput, revenue performance, uptime, and subscription metrics."
  structuredData={structuredData}
>
  <section id="dashboard">
    <div class="container">
      <h1 class="section-title">Real-time Dashboard</h1>
      <p class="section-subtitle">
        Autonomous telemetry across every crew feeds the central command dashboard, giving partners live visibility into utilization,
        reliability, and revenue.
      </p>
      <div class="grid grid-2 metric-grid">
        {metrics.map((metric) => (
          <div class="stat-card">
            <span class="metric-label">{metric.label}</span>
            <span class="metric-value">{metric.value}</span>
            <span class="metric-trend">{metric.trend} vs last cycle</span>
            <p>{metric.detail}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section>
    <div class="container">
      <h2 class="section-title">Telemetry Streams</h2>
      <div class="grid grid-3">
        <div class="glass-card">
          <h3>API Observability</h3>
          <p>Grafana dashboards and GA4 streams provide second-by-second insight into request mix and latency distributions.</p>
        </div>
        <div class="glass-card">
          <h3>Financial Intelligence</h3>
          <p>Autonomous forecasting models integrate blockchain receipts, fiat settlement, and subscription renewals.</p>
        </div>
        <div class="glass-card">
          <h3>Reliability Control</h3>
          <p>SRE agents manage predictive maintenance, failover orchestration, and compliance alerts.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .metric-grid {
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .metric-label {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 0.8rem;
    color: var(--color-muted);
  }

  .metric-value {
    font-size: 2.4rem;
    font-weight: 800;
    margin: 12px 0;
  }

  .metric-trend {
    color: #40f3ff;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .stat-card p {
    margin: 12px 0 0;
    color: var(--color-muted);
  }
</style>
