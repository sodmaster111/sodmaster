---
const { icon, title, description } = Astro.props;
---
<div class="glass-card feature">
  <div class="icon" innerHTML={icon} />
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<style>
  .feature {
    display: grid;
    gap: 16px;
  }

  .icon {
    width: 48px;
    height: 48px;
  }

  h3 {
    margin: 0;
    font-size: 1.4rem;
    font-weight: 700;
  }

  p {
    margin: 0;
    color: var(--color-muted);
  }
</style>
