<header class="fixed top-0 w-full z-50 bg-brand-dark/80 backdrop-blur-xl border-b border-white/5">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-10 h-10 bg-gradient-to-br from-brand-purple to-brand-blue rounded-xl flex items-center justify-center group-hover:scale-110 transition">
          <Icon name="heroicons:cpu-chip-solid" class="w-6 h-6" />
        </div>
        <span class="text-xl font-display font-bold">Sodmaster</span>
      </a>
      
      <div class="hidden md:flex items-center gap-8">
        <a href="/" class="hover:text-brand-blue transition">Home</a>
        <a href="/about" class="hover:text-brand-blue transition">About</a>
        <a href="/leadership" class="hover:text-brand-blue transition">Leadership</a>
        <a href="/departments" class="hover:text-brand-blue transition">Departments</a>
        <a href="/technology" class="hover:text-brand-blue transition">Technology</a>
        <a href="/pricing" class="hover:text-brand-blue transition">Pricing</a>
      </div>
      
      <div class="flex items-center gap-4">
        <a href="/admin" class="text-sm hover:text-brand-blue transition">Admin</a>
        <a href="/pricing" class="px-6 py-2 bg-gradient-to-r from-brand-purple to-brand-blue rounded-full font-semibold hover:scale-105 transition">
