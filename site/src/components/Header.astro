---
const navigation = [
  { label: 'About', href: '/about' },
  { label: 'Leadership', href: '/leadership' },
  { label: 'Departments', href: '/departments' },
  { label: 'Technology', href: '/technology' },
  { label: 'Metrics', href: '/metrics' },
  { label: 'Pricing', href: '/pricing' },
  { label: 'Blog', href: '/blog' },
  { label: 'Contact', href: '/contact' },
];

const dropdownLinks = [
  { label: 'Overview', href: '/about#overview' },
  { label: 'CrewAI Architecture', href: '/technology#crewai' },
  { label: 'AI Metrics', href: '/metrics#dashboard' },
];
---
<header class="header">
  <div class="container nav">
    <a class="brand" href="/">
      <svg width="36" height="36" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
        <rect x="6" y="6" width="36" height="36" rx="12" fill="url(#gradient)" />
        <path
          d="M18 30.5L22.4 17.6C22.8 16.4 24.4 16.3 24.9 17.4L27.1 22.5C27.4 23.2 28.3 23.5 29 23.1L33.6 20.3"
          stroke="#0A0E27"
          stroke-width="2.2"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
        <defs>
          <linearGradient id="gradient" x1="6" y1="6" x2="42" y2="42" gradientUnits="userSpaceOnUse">
            <stop stop-color="#667EEA" />
            <stop offset="1" stop-color="#00D9FF" />
          </linearGradient>
        </defs>
      </svg>
      <span>Sodmaster</span>
    </a>
    <nav class="desktop-nav">
      <div class="dropdown">
        <span class="dropdown-trigger">Platform</span>
        <div class="dropdown-menu">
          {dropdownLinks.map((link) => (
            <a href={link.href}>{link.label}</a>
          ))}
        </div>
      </div>
      {navigation.map((item) => (
        <a href={item.href}>{item.label}</a>
      ))}
    </nav>
    <div class="cta-group">
      <a class="nav-link" href="/pricing#enterprise">Enterprise Access</a>
      <a class="gradient-button" href="/contact">Request a Demo</a>
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: rgba(5, 7, 26, 0.75);
    backdrop-filter: blur(22px);
    border-bottom: 1px solid rgba(0, 217, 255, 0.1);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 18px 16px;
    gap: 24px;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    font-weight: 800;
    font-size: 1.2rem;
    letter-spacing: 0.02em;
  }

  .desktop-nav {
    display: flex;
    align-items: center;
    gap: 20px;
    font-weight: 500;
  }

  .desktop-nav a {
    padding: 8px 12px;
    border-radius: 999px;
    transition: background var(--transition-all), color var(--transition-all);
    color: var(--color-muted);
  }

  .desktop-nav a:hover {
    background: rgba(102, 126, 234, 0.16);
    color: var(--color-text);
  }

  .cta-group {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .nav-link {
    padding: 10px 18px;
    border-radius: 999px;
    border: 1px solid rgba(102, 126, 234, 0.6);
    transition: background var(--transition-all), border var(--transition-all);
  }

  .nav-link:hover {
    background: rgba(102, 126, 234, 0.2);
    border-color: rgba(0, 217, 255, 0.5);
  }

  .dropdown {
    position: relative;
    display: inline-flex;
    align-items: center;
  }

  .dropdown-trigger {
    padding: 8px 12px;
    border-radius: 999px;
    color: var(--color-muted);
    cursor: pointer;
    transition: background var(--transition-all), color var(--transition-all);
  }

  .dropdown-trigger::after {
    content: '';
    display: inline-block;
    margin-left: 8px;
    border: 5px solid transparent;
    border-top-color: var(--color-muted);
    transform: translateY(2px);
  }

  .dropdown:hover .dropdown-trigger {
    background: rgba(102, 126, 234, 0.16);
    color: var(--color-text);
  }

  .dropdown-menu {
    position: absolute;
    top: calc(100% + 12px);
    left: 0;
    display: grid;
    gap: 6px;
    padding: 18px;
    min-width: 220px;
    background: rgba(10, 14, 39, 0.92);
    border: 1px solid rgba(0, 217, 255, 0.2);
    border-radius: var(--radius-md);
    box-shadow: 0 20px 40px rgba(5, 7, 26, 0.45);
    opacity: 0;
    pointer-events: none;
    transform: translateY(12px);
    transition: opacity var(--transition-all), transform var(--transition-all);
  }

  .dropdown:hover .dropdown-menu {
    opacity: 1;
    pointer-events: auto;
    transform: translateY(0);
  }

  .dropdown-menu a {
    padding: 10px 12px;
    border-radius: 10px;
    color: var(--color-muted);
  }

  .dropdown-menu a:hover {
    background: rgba(102, 126, 234, 0.18);
    color: var(--color-text);
  }

  @media (max-width: 960px) {
    .desktop-nav {
      display: none;
    }

    .cta-group {
      margin-left: auto;
    }
  }

  @media (max-width: 720px) {
    .cta-group {
      display: none;
    }
  }
</style>
