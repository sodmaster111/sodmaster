---
const { name, description, agents } = Astro.props;
---
<section class="department glass-card">
  <div>
    <h3>{name}</h3>
    <p>{description}</p>
  </div>
  <ul>
    {agents.map((agent) => (
      <li>
        <span class="agent-name">{agent.name}</span>
        <span class="agent-role">{agent.role}</span>
        <span class="agent-focus">{agent.focus}</span>
      </li>
    ))}
  </ul>
</section>

<style>
  .department {
    display: grid;
    gap: 20px;
  }

  h3 {
    margin: 0 0 12px;
    font-size: 1.3rem;
  }

  p {
    margin: 0;
    color: var(--color-muted);
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 16px;
  }

  li {
    padding: 16px;
    border-radius: var(--radius-md);
    border: 1px solid rgba(102, 126, 234, 0.22);
    background: rgba(255, 255, 255, 0.02);
    display: grid;
    gap: 8px;
  }

  .agent-name {
    font-weight: 700;
  }

  .agent-role {
    text-transform: uppercase;
    letter-spacing: 0.06em;
    font-size: 0.78rem;
    color: var(--color-accent);
  }

  .agent-focus {
    color: var(--color-muted);
    font-size: 0.95rem;
  }
</style>
